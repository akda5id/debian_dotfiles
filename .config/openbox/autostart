# detect if a second display is attached, make it the primary display,
# and position it above the first display
~/bin/dual_display --above &

# set background color (`hsetroot` plays nice with picom) and image
hsetroot -solid "#000000"
(sleep 2; feh --bg-scale ~/image/backgrounds/current.jpg) &

# input device settings
~/bin/xinput_set &

# compositor
picom &

# power management
xfce4-power-manager &

# notifications
dunst -config ~/.config/dunst/dunstrc &

# panel - taskbar, system tray, battery, clock
tint2 &

# clipboard
greenclip daemon &

# volume control
(sleep 10; volumeicon) &

# network manager
nm-applet &

# launch terminal
xfce4-terminal &
