# set background color (`hsetroot` plays nice with picom) and image
hsetroot -solid "#000000"
feh --bg-scale ~/image/backgrounds/current.jpg &

# detect if secondary display attached and make it primary
~/bin/dldsply -r &

# compositor
picom &

# power management
xfce4-power-manager &

# notifications
dunst -config ~/.config/dunst/dunstrc &

# panel - taskbar, system tray, battery, clock
tint2 &

# clipboard
parcellite &

# volume control
(sleep 2; volumeicon) &

# network manager
nm-applet &

# launch terminal
xfce4-terminal &
